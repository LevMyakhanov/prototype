include ../logo-toxin/logo-toxin.pug
include ../header-list/header-list.pug
include ../button/button.pug
include ../text/text.pug

mixin header-guest(isReg)
    .header-guest(class=classes)       
        +logo-toxin('block_mr20px')
            img(src='img/Logo.png' alt='logo-toxin')
        +header-guest__l-wr
            +header-list(['О нас', 'Услуги', 'Вакансии', 'Новости', 'Соглашения'], ['text', 'text_c', 'text_bold', 'text_1F2041-075', 'header-list__item'],
            ['header-guest__list', 'text', 'text_c', 'block', 'header-list__item'], ['text', 'text_c', 'block', 'header-list__item'], ['text', 'text_c', 'block', 'header-list__item'],
            ['header-guest__list', 'text', 'text_c', 'block', 'block_mr20px', 'header-list__item'])
            - if(isReg){
                +header-guest__border
                +text('p', 'Юлий Цезарь', ['text_c', 'block', 'block_ml20px'])
            - } else {
                +button(['button_sm', 'button_bordered'])
                    +text('sapn', 'войти', ['text_bold', 'text_ttu', 'text_BC9CFF'])
                +button(['header-guest__button', 'block', 'block_ml20px'])
                    +text('span', 'зарегистрироваться', ['text_bold', 'text_ttu', 'text_FFF'])
            - }
            
mixin header-guest__l-wr
    .header-guest__l-wr
        block

mixin header-guest__border
    .header-guest__border