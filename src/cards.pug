doctype html
html(lang='ru')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='preconnect' href='https://fonts.gstatic.com')
    link(href='https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap' rel='stylesheet')
    // <link rel="stylesheet" href="styles.css">
    title Document
  body
    .cards
        .cards__column1.cards__column1__PP
            // форма для поиска номеров
            +room-search(['block', 'block_mb40px'])
            // регистрация аккаунта
            +account-reg('block_mt4px')
        .cards__column1.block.block_ml40px
            // бронирование номера
            +booking(['block', 'block_mb41px', 'block_mt2px'])
            // вход в аккаунт
            +enter
        .cards__column3.block.block_ml40px
            // календарь
            +calendar(['calendar__pp', 'block', 'block_mb41px'])
            // вид отдельного номера
            +room(['block', 'block_mb40px'])
                +room__img-wr
                    img.room__img(src='img/image.jpg' alt='room1')
                    +button(['room__button', 'room__button_left'])
                    +button(['room__button', 'room__button_right'])                   
                    +room__rounds-wrapper
                        +button(['room__image-scroll', 'room__image-scroll_active'])
                        +button(['room__image-scroll', 'block', 'block_ml4px'])
                        +button(['room__image-scroll', 'block', 'block_ml4px'])
                        +button(['room__image-scroll', 'block', 'block_ml4px'])
                +room-info
                    p
                        +text('span', '№', ['text_bold', 'text_fs14', 'text_lh17'])
                        +text('span', '888', ['room-info__number-pp', 'text_bold', 'text_fs20', 'text_lh29'])
                        +text('span', 'люкс', ['text_bold', 'text_ttu', 'text_BC9CFF'])
                    p.room-info__price-pp
                        +text('span', '9 990₽', ['text_bold', 'text_fs14', 'text_lh18', 'text_1F2041-05'])
                        +text('span', 'в сутки', ['text_lh18', 'text_1F2041-05', 'room-info__small-text-pp'])
                +room__like-wrapper
                    +room__star-wrapper
                        - let nRate = 5;
                        - for(let i=1; i<=nRate; i++){
                            +button-star
                                img(src='img/star.png' alt='star')
                        - }
                    p
                        +text('span', '145', ['text_lh18', 'text_1F2041-05', 'text_fs14', 'text_bold', 'block', 'block_mr4px'])
                        +text('span', 'Отзывов', ['text_fs14', 'text_lh18', 'text_1F2041-05'])
            // вид отдельного номера
            +room
                +room__img-wr
                    img.room__img(src='img/image2.jpg' alt='room2')             
                    +room__rounds-wrapper
                        +button(['room__image-scroll', 'room__image-scroll_active'])
                        +button(['room__image-scroll', 'block', 'block_ml4px'])
                        +button(['room__image-scroll', 'block', 'block_ml4px'])
                        +button(['room__image-scroll', 'block', 'block_ml4px'])
                +room-info(['block', 'block_mb20px'])
                    p
                        +text('span', '№', ['text_bold', 'text_fs14', 'text_lh17'])
                        +text('span', '840', ['room-info__number-pp', 'text_bold', 'text_fs20', 'text_lh29'])
                    p.room-info__price-pp
                        +text('span', '9 900₽', ['text_bold', 'text_fs14', 'text_lh18', 'text_1F2041-05'])
                        +text('span', 'в сутки', ['text_lh18', 'text_1F2041-05', 'room-info__small-text-pp'])
                +room__like-wrapper
                    +room__star-wrapper
                        - let nRate = 5;
                        - for(let i=1; i<=nRate; i++){
                            - if(i===nRate) {
                                +button-star
                                    img(src='img/star_border.png' alt='star')
                            - }
                            - else {
                                +button-star
                                    img(src='img/star.png' alt='star')
                            - }            
                        - }
                    p
                        +text('span', '65', ['text_lh18', 'text_1F2041-05', 'text_fs14', 'text_bold', 'block', 'block_mr4px'])
                        +text('span', 'Отзывов', ['text_fs14', 'text_lh18', 'text_1F2041-05'])